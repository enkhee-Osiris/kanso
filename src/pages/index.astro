---
import { getCollection } from "astro:content";

import FloatingNav from "@/components/FloatingNav.astro";
import FullscreenNav from "@/components/FullscreenNav.astro";
import Head from "@/components/Head.astro";
import {
  HOME_FEATURED_WRITINGS_LIMIT,
  HOME_LATEST_WRITINGS_LIMIT,
  SITE_DESCRIPTION,
  SITE_TITLE,
  URLS,
} from "@/constants";
import { getFeaturedWritings, getNonFeaturedWritings } from "@/utils/data";

const githubIcon = await import("@/assets/icons/github.svg?raw");
const arrowRightIcon = await import("@/assets/icons/arrow-right.svg?raw");
const linkedinIcon = await import("@/assets/icons/linkedin.svg?raw");
const mailIcon = await import("@/assets/icons/mail.svg?raw");

const allWritings = await getCollection("writing");

const featuredWritings = getFeaturedWritings(allWritings, HOME_FEATURED_WRITINGS_LIMIT);

const latestWritings = getNonFeaturedWritings(allWritings, HOME_LATEST_WRITINGS_LIMIT);
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <main>
      <div class="container">
        <section class="intro" aria-label="Introduction">
          <div>
            <h1>Enkherdene Bolormaa</h1>
            <p>
              Software engineer focused on design. <br />Exploring the space between design and
              code.
            </p>
          </div>

          <ul role="list">
            <li>
              <a href="#" aria-label="GitHub">
                <Fragment set:html={githubIcon.default} />
              </a>
            </li>
            <li>
              <a href="#" aria-label="LinkedIn">
                <Fragment set:html={linkedinIcon.default} />
              </a>
            </li>
            <li>
              <a href="#" aria-label="Email">
                <Fragment set:html={mailIcon.default} />
              </a>
            </li>
          </ul>
        </section>

        <section class="featured-writings" aria-label="Featured writings">
          <ul role="list">
            {
              featuredWritings.map(writing => (
                <li class="card">
                  <a href={URLS.writing(writing.id)}>
                    <h2>{writing.data.title}</h2>

                    <p>{writing.data.description}</p>
                  </a>

                  {Array.isArray(writing.data.tags) && writing.data.tags.length > 0 && (
                    <ul class="tags" role="list">
                      {writing.data.tags.map(tag => (
                        <li>
                          <a href={URLS.tag(tag)}>{tag}</a>
                        </li>
                      ))}
                    </ul>
                  )}
                </li>
              ))
            }
          </ul>
        </section>

        <section class="latest-writings" aria-label="Latest writings">
          <h2>
            <a href={URLS.writings}>
              Writings <span aria-hidden="true"><Fragment set:html={arrowRightIcon.default} /></span
              >
            </a>
          </h2>

          <ul role="list">
            {
              latestWritings.map(writing => (
                <li>
                  <a href={URLS.writing(writing.id)}>{writing.data.title}</a>
                </li>
              ))
            }
          </ul>
        </section>
      </div>
    </main>
    <FloatingNav />
    <FullscreenNav />
  </body>
</html>

<style>
  /* -------------------------
   * Page Layout
   * Vertically stacked sections with generous spacing
   * ------------------------- */
  .container {
    display: flex;
    flex: 1;
    flex-direction: column;
    padding-block: 15rem;
    margin-inline: auto;
    max-width: 48rem;
    gap: 9rem;
  }

  /* -------------------------
   * Intro — Name, bio, and social links
   * Narrower than container for visual hierarchy
   * ------------------------- */
  .intro {
    display: flex;
    flex-direction: column;
    margin-inline: auto;
    width: 36rem;
    gap: 2.5rem;
  }

  .intro h1 {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.75rem;
    line-height: 1.29;
  }

  .intro p {
    padding-top: 1rem;
    color: var(--color-surface-700);
    font-size: 1.75rem;
    line-height: 1.29;
  }

  /* Social icon links — horizontal row of SVG icons */
  .intro ul {
    display: flex;
    gap: 1.75rem;
  }

  .intro ul a {
    color: var(--color-surface-400);
    transition: color 0.3s ease-in-out;
  }

  .intro ul a :global(svg) {
    width: 2rem;
    height: 2rem;
  }

  .intro ul a:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
    color: var(--color-text);
  }

  .intro ul a:hover {
    color: var(--color-text);
  }

  /* -------------------------
   * Featured Writings — Two side-by-side writing cards
   * Each card has a title, description, and tag pills
   * ------------------------- */
  .featured-writings ul {
    display: flex;
    gap: 2.25rem;
  }

  /* Card — bordered box with hover highlight */
  .featured-writings .card {
    position: relative;
    display: flex;
    flex-direction: column;
    flex: 1;
    padding-inline: 1.25rem;
    padding-block: 1.75rem;
    border: 1px solid var(--color-border);
    border-radius: 1.25rem;
    justify-content: space-between;
    gap: 2.25rem;
    transition: border-color 0.3s ease-in-out;
  }

  .featured-writings .card:focus-within {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
  }

  .featured-writings .card:hover {
    border-color: var(--color-border-hover);
  }

  /* Card link — wraps title + description */
  .featured-writings .card > a {
    text-decoration: none;
  }

  .featured-writings .card > a::after {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
  }

  .featured-writings .card > a:focus {
    outline: none;
  }

  /* Card title — fixed height for consistent card alignment */
  .featured-writings .card h2 {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.5rem;
    line-height: 1.3333;
    height: 4rem;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 1rem;
  }

  /* Card description — capped height to keep cards uniform */
  .featured-writings .card p {
    font-size: 1.0625rem;
    line-height: 1.53;
    color: var(--color-surface-700);
    max-height: 8.125rem;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Tag pills — small rounded labels below each card */
  .featured-writings .tags {
    position: relative;
    z-index: 2;
    display: flex;
    align-self: flex-start;
    gap: 0.75rem;
  }

  .featured-writings .tags li a {
    display: block;
    padding: 0.4rem 0.8rem;
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1;
    border-radius: 9999px;
    background: var(--color-surface-100);
    color: var(--color-surface-700);
  }

  .featured-writings .tags li a:hover {
    background: var(--color-surface-200);
    color: var(--color-surface-900);
  }

  .featured-writings .tags li a:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.125rem;
    background: var(--color-surface-200);
    color: var(--color-surface-900);
  }

  /* -------------------------
   * Latest Writings — "Writings →" heading + writing title list
   * ------------------------- */
  .latest-writings {
    margin-inline: auto;
    width: 36rem;
  }

  .latest-writings h2 {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.0625rem;
    line-height: 1.41;
    margin-bottom: 2rem;
  }

  .latest-writings h2 a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-surface-400);
    transition:
      color 0.3s ease-in-out,
      gap 0.2s ease;
  }

  .latest-writings h2 a:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
    color: var(--color-text);
  }

  .latest-writings h2 a:hover {
    color: var(--color-text);
    gap: 1rem;
  }

  .latest-writings h2 a :global(svg) {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Writing list — vertical stack of title links */
  .latest-writings ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .latest-writings li a {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.5rem;
    line-height: 1.3333;
    text-decoration: none;
    color: var(--color-text);
  }

  .latest-writings li a:link {
    color: var(--color-text);
  }

  .latest-writings li a:visited {
    color: var(--color-surface-400);
  }

  .latest-writings li a:hover {
    color: var(--color-surface-600);
  }

  .latest-writings li a:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
    color: var(--color-text);
  }
</style>
