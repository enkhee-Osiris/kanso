---
import { getCollection } from "astro:content";

import FloatingNav from "@/components/FloatingNav.astro";
import FormattedDate from "@/components/FormattedDate.astro";
import FullscreenNav from "@/components/FullscreenNav.astro";
import Head from "@/components/Head.astro";
import SkipLink from "@/components/SkipLink.astro";
import {
  DESCRIPTIONS,
  HOME_FEATURED_WRITINGS_LIMIT,
  HOME_LATEST_WRITINGS_LIMIT,
  SOCIAL,
  TITLES,
  URLS,
} from "@/constants";
import { getFeaturedWritings, getNonFeaturedWritings } from "@/utils/data";

const githubIcon = await import("@/assets/icons/github.svg?raw");
const arrowRightIcon = await import("@/assets/icons/arrow-right.svg?raw");
const linkedinIcon = await import("@/assets/icons/linkedin.svg?raw");
const mailIcon = await import("@/assets/icons/mail.svg?raw");

const allWritings = await getCollection("writing");

const featuredWritings = getFeaturedWritings(allWritings, HOME_FEATURED_WRITINGS_LIMIT);

const latestWritings = getNonFeaturedWritings(allWritings, HOME_LATEST_WRITINGS_LIMIT);
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={TITLES.home} description={DESCRIPTIONS.home} />
  </head>

  <body>
    <SkipLink />
    <main id="main-content">
      <div class="container">
        <section class="intro" aria-label="Introduction">
          <div class="intro-content">
            <h1 class="intro-title">Enkherdene Bolormaa</h1>
            <p class="intro-bio">
              Software engineer focused on design. <br />Exploring the space between design and
              code.
            </p>
          </div>

          <ul class="intro-social" role="list">
            <li>
              <a class="intro-social-link" href={SOCIAL.github} aria-label="GitHub">
                <Fragment set:html={githubIcon.default} />
              </a>
            </li>
            <li>
              <a class="intro-social-link" href={SOCIAL.linkedin} aria-label="LinkedIn">
                <Fragment set:html={linkedinIcon.default} />
              </a>
            </li>
            <li>
              <a class="intro-social-link" href={SOCIAL.email} aria-label="Email">
                <Fragment set:html={mailIcon.default} />
              </a>
            </li>
          </ul>
        </section>

        {
          featuredWritings.length > 0 && (
            <section class="featured-writings" aria-label="Featured writings">
              <ul class="featured-list" role="list">
                {featuredWritings.map(writing => (
                  <li class="featured-card card">
                    <a class="featured-card-link" href={URLS.writing(writing.id)}>
                      <h2 class="featured-title">{writing.data.title}</h2>

                      <p class="featured-description">{writing.data.description}</p>
                    </a>

                    {Array.isArray(writing.data.tags) && writing.data.tags.length > 0 && (
                      <ul class="featured-tags tags" role="list">
                        {writing.data.tags.map(tag => (
                          <li>
                            <a href={URLS.tag(tag)}>{tag}</a>
                          </li>
                        ))}
                      </ul>
                    )}
                  </li>
                ))}
              </ul>
            </section>
          )
        }

        {
          latestWritings.length > 0 && (
            <section class="latest-writings" aria-label="Latest writings">
              <h2 class="latest-heading">
                <a class="latest-heading-link" href={URLS.writings}>
                  Writings
                  <span class="latest-icon" aria-hidden="true">
                    <Fragment set:html={arrowRightIcon.default} />
                  </span>
                </a>
              </h2>

              <ul class="latest-list" role="list">
                {latestWritings.map(writing => (
                  <li>
                    <a class="latest-link" href={URLS.writing(writing.id)}>
                      <FormattedDate
                        date={writing.data.pubDatetime}
                        formatOptions={{ year: "2-digit", month: "numeric", day: "numeric" }}
                      />
                      <span class="latest-title">{writing.data.title}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </section>
          )
        }
      </div>
    </main>
    <FloatingNav />
    <FullscreenNav />
  </body>
</html>

<style>
  :root {
    --home-padding-y: 15rem;
    --home-section-gap: 9rem;
    --home-content-width: 36rem;
    --home-card-gap: 2.25rem;
    --home-transition: 0.3s ease-in-out;
  }

  /* -------------------------
   * Page Layout
   * Vertically stacked sections with generous spacing
   * ------------------------- */
  .container {
    display: flex;
    flex: 1;
    flex-direction: column;
    padding-block: var(--home-padding-y);
    margin-inline: auto;
    max-width: 48rem;
    gap: var(--home-section-gap);
  }

  /* -------------------------
   * Intro — Name, bio, and social links
   * Narrower than container for visual hierarchy
   * ------------------------- */
  .intro {
    display: flex;
    flex-direction: column;
    margin-inline: auto;
    width: var(--home-content-width);
    gap: 2.5rem;
  }

  .intro-title {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.75rem;
    line-height: 1.29;
  }

  .intro-bio {
    padding-top: 1rem;
    color: var(--color-surface-700);
    font-size: 1.75rem;
    line-height: 1.29;
  }

  /* Social icon links — horizontal row of SVG icons */
  .intro-social {
    display: flex;
    gap: 1.75rem;
  }

  .intro-social-link {
    color: var(--color-surface-400);
    transition: color var(--home-transition);
  }

  .intro-social-link :global(svg) {
    width: 2rem;
    height: 2rem;
  }

  .intro-social-link:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
    color: var(--color-text);
  }

  .intro-social-link:hover {
    color: var(--color-text);
  }

  /* -------------------------
   * Featured Writings — Two side-by-side writing cards
   * Each card has a title, description, and tag pills
   * ------------------------- */
  .featured-list {
    display: flex;
    gap: var(--home-card-gap);
  }

  /* Card — bordered box with hover highlight */
  .featured-card {
    position: relative;
    display: flex;
    flex-direction: column;
    flex: 1;
    padding-inline: 1.25rem;
    padding-block: 1.75rem;
    border: 1px solid var(--color-border);
    border-radius: 1.25rem;
    justify-content: space-between;
    gap: 2.25rem;
    transition: border-color var(--home-transition);
  }

  .featured-card:focus-within {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
  }

  .featured-card:hover {
    border-color: var(--color-border-hover);
  }

  /* Card link — wraps title + description */
  .featured-card-link {
    text-decoration: none;
  }

  .featured-card-link::after {
    content: "";
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .featured-card-link:focus {
    outline: none;
  }

  /* Card title — fixed height for consistent card alignment */
  .featured-title {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.5rem;
    line-height: 1.3333;
    height: 4rem;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-block-end: 1rem;
  }

  /* Card description — capped height to keep cards uniform */
  .featured-description {
    font-size: 1.0625rem;
    line-height: 1.53;
    color: var(--color-surface-700);
    max-height: 8.125rem;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Tag pills — small rounded labels below each card */
  .featured-tags {
    position: relative;
    z-index: 2;
    display: flex;
    align-self: flex-start;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .featured-tags li {
    display: inline-block;
  }

  .featured-tags li a {
    display: block;
    padding: 0.4rem 0.8rem;
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1;
    border-radius: 9999px;
    background: var(--color-surface-100);
    color: var(--color-surface-700);
  }

  .featured-tags li a::before {
    content: "#";
    margin-inline-end: 1px;
  }

  .featured-tags li a:hover,
  .featured-tags li a:focus-visible {
    background: var(--color-surface-200);
    color: var(--color-surface-900);
  }

  .featured-tags li a:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.125rem;
  }

  /* -------------------------
   * Latest Writings — "Writings →" heading + writing title list
   * ------------------------- */
  .latest-writings {
    margin-inline: auto;
    width: var(--home-content-width);
  }

  .latest-heading {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.0625rem;
    line-height: 1.41;
    margin-block-end: 2rem;
  }

  .latest-heading-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-surface-600);
    transition:
      color var(--home-transition),
      gap 0.2s ease;
  }

  .latest-heading-link:hover,
  .latest-heading-link:focus-visible {
    color: var(--color-text);
  }

  .latest-heading-link:hover {
    gap: 1rem;
  }

  .latest-heading-link:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
    border-radius: 0.125rem;
  }

  .latest-icon {
    display: flex;
    align-items: center;
  }

  .latest-icon :global(svg) {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Writing list — vertical stack of title links */
  .latest-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .latest-link {
    display: inline-block;
    position: relative;
    text-decoration: none;
  }

  .latest-link:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.5rem;
    border-radius: 0.125rem;
  }

  .latest-title {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.5rem;
    line-height: 1.3333;
    color: var(--color-text);
  }

  .latest-link:link .latest-title {
    color: var(--color-text);
  }

  .latest-link:visited .latest-title {
    color: var(--color-surface-400);
  }

  .latest-link:hover .latest-title,
  .latest-link:focus-visible .latest-title {
    color: var(--color-surface-600);
  }

  .latest-link :global(time) {
    position: absolute;
    padding-block-start: 0.5625rem;
    inset-inline-end: 100%;
    margin-inline-end: 1rem;
    white-space: nowrap;
    color: var(--color-surface-700);
    font-size: 0.875rem;
    line-height: 1;
    opacity: 0;
    transition: opacity var(--home-transition);
  }

  .latest-link:hover :global(time),
  .latest-link:focus-visible :global(time) {
    opacity: 1;
  }
</style>
