---
import { getCollection } from "astro:content";

import FloatingNav from "@/components/FloatingNav.astro";
import FullscreenNav from "@/components/FullscreenNav.astro";
import Head from "@/components/Head.astro";
import { SITE_DESCRIPTION, SITE_TITLE, URLS } from "@/constants";

const githubIcon = await import("@/assets/icons/github.svg?raw");
const arrowRightIcon = await import("@/assets/icons/arrow-right.svg?raw");
const linkedinIcon = await import("@/assets/icons/linkedin.svg?raw");
const mailIcon = await import("@/assets/icons/mail.svg?raw");

const allPosts = await getCollection("blog");

const featuredPosts = allPosts
  .filter(post => post.data.featured === true)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 2);

const latestPosts = allPosts
  .filter(post => post.data.featured !== true)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <main>
      <div class="container">
        <section class="intro" aria-label="Introduction">
          <div>
            <h1>Enkherdene Bolormaa</h1>
            <p>
              Software engineer focused on design. <br />Exploring the space between design and
              code.
            </p>
          </div>

          <ul role="list">
            <li>
              <a href="#" aria-label="GitHub">
                <Fragment set:html={githubIcon.default} />
              </a>
            </li>
            <li>
              <a href="#" aria-label="LinkedIn">
                <Fragment set:html={linkedinIcon.default} />
              </a>
            </li>
            <li>
              <a href="#" aria-label="Email">
                <Fragment set:html={mailIcon.default} />
              </a>
            </li>
          </ul>
        </section>

        <section class="featured-writings" aria-label="Featured writings">
          <ul role="list">
            {
              featuredPosts.map(post => (
                <li>
                  <a href={URLS.blogPost(post.id)}>
                    <h2>{post.data.title}</h2>

                    <p>{post.data.description}</p>
                  </a>

                  {Array.isArray(post.data.tags) && post.data.tags.length > 0 && (
                    <ul class="tags" role="list">
                      {post.data.tags.map(tag => (
                        <li>{tag}</li>
                      ))}
                    </ul>
                  )}
                </li>
              ))
            }
          </ul>
        </section>

        <section class="latest-writings" aria-label="Latest writings">
          <h2>
            <a href={URLS.blog}>
              Writings <span aria-hidden="true"><Fragment set:html={arrowRightIcon.default} /></span
              >
            </a>
          </h2>

          <ul role="list">
            {
              latestPosts.map(post => (
                <li>
                  <a href={URLS.blogPost(post.id)}>{post.data.title}</a>
                </li>
              ))
            }
          </ul>
        </section>
      </div>
    </main>
    <FloatingNav />
    <FullscreenNav />
  </body>
</html>

<style>
  /* -------------------------
   * Page Layout
   * Vertically stacked sections with generous spacing
   * ------------------------- */
  .container {
    display: flex;
    flex: 1;
    flex-direction: column;
    padding-block: 15rem;
    margin-inline: auto;
    max-width: 48rem;
    gap: 9rem;
  }

  /* -------------------------
   * Intro — Name, bio, and social links
   * Narrower than container for visual hierarchy
   * ------------------------- */
  .intro {
    display: flex;
    flex-direction: column;
    margin-inline: auto;
    width: 36rem;
    gap: 2.5rem;
  }

  .intro h1 {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.75rem;
    line-height: 1.29;
  }

  .intro p {
    padding-top: 1rem;
    color: var(--color-surface-700);
    font-size: 1.75rem;
    line-height: 1.29;
  }

  /* Social icon links — horizontal row of SVG icons */
  .intro ul {
    display: flex;
    gap: 1.75rem;
  }

  .intro ul a {
    color: var(--color-surface-400);
    transition: color 0.3s ease-in-out;
  }

  .intro ul a :global(svg) {
    width: 2rem;
    height: 2rem;
  }

  .intro ul a:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
    color: var(--color-text);
  }

  .intro ul a:hover {
    color: var(--color-text);
  }

  /* -------------------------
   * Featured Writings — Two side-by-side post cards
   * Each card has a title, description, and tag pills
   * ------------------------- */
  .featured-writings ul {
    display: flex;
    gap: 2.25rem;
  }

  /* Card — bordered box with hover highlight */
  .featured-writings > ul > li {
    position: relative;
    display: flex;
    flex-direction: column;
    flex: 1;
    padding-inline: 1.25rem;
    padding-block: 1.75rem;
    border: 1px solid var(--color-border);
    border-radius: 1.25rem;
    justify-content: space-between;
    gap: 2.25rem;
    transition: border-color 0.3s ease-in-out;
  }

  .featured-writings > ul > li:focus-within {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
  }

  .featured-writings > ul > li:hover {
    border-color: var(--color-border-hover);
  }

  /* Card link — wraps title + description */
  .featured-writings li a {
    text-decoration: none;
  }

  .featured-writings li a::after {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
  }

  .featured-writings li a:focus {
    outline: none;
  }

  /* Card title — fixed height for consistent card alignment */
  .featured-writings li h2 {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.5rem;
    line-height: 1.3333;
    height: 4rem;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 1rem;
  }

  /* Card description — capped height to keep cards uniform */
  .featured-writings li p {
    font-size: 1.0625rem;
    line-height: 1.53;
    color: var(--color-surface-700);
    max-height: 8.125rem;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Tag pills — small rounded labels below each card */
  .featured-writings .tags {
    position: relative;
    z-index: 2;
    display: flex;
    align-self: flex-start;
    gap: 0.75rem;
  }

  .featured-writings .tags li {
    font-size: 0.875rem;
    line-height: 1;
    padding: 0.4rem 0.8rem;
    border-radius: 9999px;
    background: var(--color-surface-100);
    color: var(--color-surface-700);
  }

  /* -------------------------
   * Latest Writings — "Writings →" heading + post title list
   * ------------------------- */
  .latest-writings {
    margin-inline: auto;
    width: 36rem;
  }

  .latest-writings h2 {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.0625rem;
    line-height: 1.41;
    margin-bottom: 2rem;
  }

  .latest-writings h2 a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-surface-400);
    transition:
      color 0.3s ease-in-out,
      gap 0.2s ease;
  }

  .latest-writings h2 a:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
    color: var(--color-text);
  }

  .latest-writings h2 a:hover {
    color: var(--color-text);
    gap: 1rem;
  }

  .latest-writings h2 a :global(svg) {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Post list — vertical stack of title links */
  .latest-writings ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .latest-writings li a {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.5rem;
    line-height: 1.3333;
    text-decoration: none;
    color: var(--color-text);
    transition: color 0.3s ease-in-out;
  }

  .latest-writings li a:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
    color: var(--color-text);
  }

  .latest-writings li a:hover {
    color: var(--color-surface-500);
  }
</style>
