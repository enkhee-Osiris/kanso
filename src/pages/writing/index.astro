---
import { getCollection } from "astro:content";

import FloatingNav from "@/components/FloatingNav.astro";
import FormattedDate from "@/components/FormattedDate.astro";
import FullscreenNav from "@/components/FullscreenNav.astro";
import Head from "@/components/Head.astro";
import SkipLink from "@/components/SkipLink.astro";
import { DESCRIPTIONS, TITLES, URLS } from "@/constants";
import { getWritingsByYear } from "@/utils/data";

const allWritings = await getCollection("writing");
const writingsByYear = getWritingsByYear(allWritings);

// Track grid row position for year spanning
// TODO: Add section Heading
let gridRow = 1;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={TITLES.writings} description={DESCRIPTIONS.writings} />
  </head>

  <body>
    <SkipLink />
    <main id="main-content">
      <section class="container" aria-label="Writings">
        <h1 class="heading">Writings</h1>

        <dl class="writings-list">
          {
            writingsByYear.map(({ year, writings }) => {
              const span = writings.length;
              const yearGridRow = gridRow;
              gridRow += span;

              return [
                <dt class="writing-year" style={`grid-row: ${yearGridRow} / span ${span}`}>
                  {year}
                </dt>,

                ...writings.map(writing => (
                  <dd class="writing-item">
                    <a href={URLS.writing(writing.id)} class="writing-link">
                      <span class="date">
                        <FormattedDate
                          date={writing.data.pubDatetime}
                          formatOptions={{ month: "short", day: "numeric" }}
                        />
                      </span>

                      <span class="title">{writing.data.title}</span>
                    </a>
                  </dd>
                )),
              ];
            })
          }
        </dl>
      </section>
    </main>
    <FloatingNav />
    <FullscreenNav />
  </body>
</html>

<style>
  :root {
    --writings-padding-y: 15rem;
    --writings-list-gap-row: 1rem;
    --writings-list-gap-column: 2rem;
  }

  .container {
    width: 100%;
    max-width: 48rem;
    margin-inline: auto;
    padding-block: var(--writings-padding-y);
  }

  .heading {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    width: 36rem;
    margin-inline: auto;
    font-size: 2.5rem;
    line-height: 1.2;
    margin-block-end: 1.5rem;
  }

  .writings-list {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--writings-list-gap-row) var(--writings-list-gap-column);
  }

  .writing-year {
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.25rem;
    line-height: 1.4;
    color: var(--color-surface-600);
    text-align: right;
    position: sticky;
    top: 0;
    padding-block: 0.25rem;
    grid-column: 1;
    width: 4.0625rem;
  }

  .writing-item {
    grid-column: 2;
  }

  .writing-link {
    display: block;
    text-decoration: none;
  }

  .date {
    font-size: 0.875rem;
    line-height: 1.21;
    color: var(--color-surface-700);
    margin-block-end: 0.25rem;
    display: block;
  }

  .writing-link:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.5rem;
    border-radius: 0.125rem;
  }

  .title {
    display: block;
    font-family: var(--font-display);
    font-weight: 700;
    font-optical-sizing: auto;
    font-size: 1.5rem;
    line-height: 1.3333;
    color: var(--color-text);
  }

  .writing-link:link .title {
    color: var(--color-text);
  }

  .writing-link:visited .title {
    color: var(--color-surface-400);
  }

  .writing-link:hover .title,
  .writing-link:focus-visible .title {
    color: var(--color-surface-600);
  }
</style>
