---
import { URLS } from "@/constants";
---

<nav class="fullscreen-nav" aria-label="Main menu">
  <ul role="list">
    <li><a href={URLS.home}>Home</a></li>
    <li><a href={URLS.blog}>Blog</a></li>
    <li><a href={URLS.about}>About</a></li>
    <li><a href={URLS.search}>Search</a></li>
  </ul>
</nav>

<style>
  .fullscreen-nav {
    position: fixed;
    inset: 0;
    z-index: 90;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg);
    visibility: hidden;
    opacity: 0;
    transition:
      opacity 0.3s ease-in-out,
      visibility 0.3s;
  }

  :global(html[data-menu-open]) {
    overflow: hidden;
  }

  :global(html[data-menu-open]) .fullscreen-nav {
    visibility: visible;
    opacity: 1;
  }

  ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  a {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 2.5rem;
    line-height: 1.2;
    text-decoration: none;
    color: var(--color-text);
    transition: color 0.3s ease-in-out;
  }

  a:hover {
    color: var(--color-surface-500);
  }

  a:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
  }
</style>
