---
import { URLS } from "@/constants";
---

<nav id="fullscreen-nav" class="fullscreen-nav" aria-label="Main menu">
  <ul role="list">
    <li><a href={URLS.home}>Home</a></li>
    <li><a href={URLS.writings}>Writings</a></li>
    <li><a href={URLS.tags}>Tags</a></li>
    <li><a href={URLS.about}>About</a></li>
    <li><a href={URLS.search}>Search</a></li>
  </ul>
</nav>

<style>
  /* -------------------------
   * Layout — Nav Container
   * Full-viewport overlay, hidden by default
   * ------------------------- */
  .fullscreen-nav {
    display: flex;
    position: fixed;
    justify-content: center;
    align-items: center;
    visibility: hidden;
    opacity: 0;
    z-index: 90;
    transition:
      opacity 0.3s ease-in-out,
      visibility 0.3s;
    inset: 0;
    background: var(--color-bg);
  }

  /* -------------------------
   * State — Menu Open
   * Triggered by html[data-menu-open] attribute set by FloatingNav
   * ------------------------- */
  :global(html[data-menu-open]) {
    overflow: hidden;
  }

  :global(html[data-menu-open]) .fullscreen-nav {
    visibility: visible;
    opacity: 1;
  }

  /* -------------------------
   * Module — Nav List
   * ------------------------- */
  ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  /* -------------------------
   * Module — Nav Links
   * ------------------------- */
  a {
    transition: color 0.3s ease-in-out;
    color: var(--color-text);
    font-weight: 700;
    font-size: 2.5rem;
    line-height: 1.2;
    font-family: var(--font-display);
    text-decoration: none;
  }

  /* -------------------------
   * State — Interactive
   * ------------------------- */
  a:hover {
    color: var(--color-surface-500);
  }

  a:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.25rem;
  }
</style>
