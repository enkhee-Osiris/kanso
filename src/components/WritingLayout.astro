---
import type { CollectionEntry } from "astro:content";

import FloatingNav from "@/components/FloatingNav.astro";
import Footer from "@/components/Footer.astro";
import FullscreenNav from "@/components/FullscreenNav.astro";
import Head from "@/components/Head.astro";

type Props = {
  title: CollectionEntry<"writing">["data"]["title"];
  description: CollectionEntry<"writing">["data"]["description"];
};

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <Head title={title} description={description} />
    <style>
      main {
        margin: 0;
        width: calc(100% - 2em);
        max-width: 100%;
      }
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        box-shadow: var(--box-shadow);
        border-radius: 12px;
      }
      .prose {
        margin: auto;
        padding: 1em;
        width: 720px;
        max-width: calc(100% - 2em);
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        line-height: 1;
        text-align: center;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body>
    <main>
      <article>
        <div class="prose">
          <div class="title">
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <FloatingNav />
    <FullscreenNav />
    <Footer />
  </body>
</html>
