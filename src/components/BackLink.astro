---
import { URLS } from "@/constants";

const arrowLeftIcon = await import("@/assets/icons/arrow-left.svg?raw");
const { href = URLS.writings, label = "Back to writings" } = Astro.props;
---

<a href={href} class="back-link">
  <span class="back-link-icon" set:html={arrowLeftIcon.default} />
  <span class="back-link-text">{label}</span>
</a>

<style>
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-surface-500);
    font-size: 0.875rem;
    transition:
      color 0.3s ease-in-out,
      gap 0.2s ease;
    margin-block-end: 1rem;
  }

  .back-link:hover,
  .back-link:focus-visible {
    color: var(--color-text);
    gap: 0.75rem;
  }

  .back-link:focus-visible {
    outline: 1px solid var(--color-border-hover);
    outline-offset: 0.5rem;
    border-radius: 0.125rem;
  }

  .back-link-icon {
    display: flex;
    width: 1rem;
    height: 1rem;
  }

  .back-link-icon :global(svg) {
    width: 100%;
    height: 100%;
  }
</style>
